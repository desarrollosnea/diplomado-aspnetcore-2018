
@{
    ViewData["Title"] = "Home Page";
}


<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Local</th>
            <th>Visitante</th>
            <th>Torneo</th>
            <th>Temporada</th>
            <th>GolesLocal</th>
            <th>GolesVisitante</th>
            <th>TarjetaAmarillaLocal</th>
