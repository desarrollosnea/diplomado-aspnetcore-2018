            columns: [
                { data: 'fecha' },
                { data: 'local' },
                { data: 'visitante' },
                { data: 'torneo' },
                { data: 'temporada' },
                { data: 'golesLocal' },
                { data: 'golesVisitante' },
                { data: 'tarjetaAmarillaLocal' },
                { data: 'tarjetaAmarillaVisitante' },
                { data: 'tarjetaRojaLocal' },
                { data: 'tarjetaRojaVisitante' }
            ]
